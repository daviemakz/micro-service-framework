{
  "name": "risen-js",
  "version": "1.0.0",
  "description": "This package allows streaming & non-streaming microservices to be build on the frontend and the backend.",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "devInstall": "yarn install --production=false",
    "test": "jest",
    "test:single": "jest ./__tests__/suites/lib/validate.test.js",
    "prepublishOnly": "rimraf dist && babel src --out-dir dist && yarn format && git commit -a -m 'version update & formatting' && yarn version --patch",
    "postversion": "git push",
    "format": "prettier --config ./.prettierrc --write './**/*.js'",
    "format-windows": "prettier --config ./.prettierrc --write ./**/*.js",
    "watch": "babel --watch src --out-dir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daviemakz/risen-js.git"
  },
  "keywords": [
    "micro",
    "service",
    "framework",
    "browser",
    "webpack",
    "server",
    "server-end",
    "front-end",
    "node",
    "node",
    "react",
    "angular",
    "child-process",
    "micro",
    "service",
    "microservice",
    "micro-service",
    "microservices",
    "micro-services",
    "services",
    "micro services",
    "micro service",
    "framework"
  ],
  "author": "David Makuni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daviemakz/risen-js/issues"
  },
  "homepage": "https://github.com/daviemakz/risen-js#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-syntax-throw-expressions": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-google": "^0.12.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.2",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.1.0",
    "mocha": "6.0.1",
    "prettier": "^1.13.7",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "request": "^2.88.0",
    "rimraf": "^2.6.3"
  },
  "dependencies": {
    "autobind": "^1.0.3",
    "body-parser": "^1.18.3",
    "browserify": "^16.2.2",
    "child-process": "^1.0.2",
    "child_process": "^1.0.2",
    "cookie-parser": "^1.4.3",
    "deepmerge": "^3.1.0",
    "eslint-config-standard": "^12.0.0",
    "express": "^4.16.4",
    "find-free-port": "^2.0.0",
    "fs": "0.0.2",
